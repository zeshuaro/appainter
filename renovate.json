{
  "extends": ["config:base"],
  "ignorePaths": [
    "android/**",
    "ios/**",
    "example/android/**",
    "example/ios/**"
  ],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "schedule": ["after 6pm every weekday", "every weekend"],
  "timezone": "Australia/Sydney",
  "packageRules": [
    {
      "groupName": "Dev Dependencies",
      "matchPaths": ["pubspec.yaml"],
      "matchDepTypes": ["dev_dependencies"]
    },
    {
      "groupName": "Bloc Dependencies",
      "matchPaths": ["pubspec.yaml"],
      "matchPackageNames": ["bloc", "flutter_bloc", "bloc_test"]
    },
    {
      "groupName": "GitHub Actions Dependencies",
      "matchPaths": [".github/workflows/*.yml"],
      "addLabels": ["ci"]
    }
  ]
}
